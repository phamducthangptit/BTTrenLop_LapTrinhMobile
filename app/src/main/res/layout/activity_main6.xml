<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity6">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bài 6 - Nhóm 9"
        android:textSize="32sp"
        android:gravity="center"
        android:textColor="#BA0707"
        android:textStyle="bold"
        android:background="#2196F3"/>
    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bóng đèn"
        android:textSize="25sp"
        android:textColor="#F81C1C"
        android:gravity="center"
        android:id="@+id/swBongDen"
        />
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/lbongDen"
        >
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/imgBongDenBat"
            android:src="@drawable/lamp_on"/>
        <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/imgBongDenTat"
        android:src="@drawable/lamp_off"
        android:visibility="gone" />
        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="Bật"
            android:textOff="Tắt"
            android:gravity="center"
            android:id="@+id/tgBatTat"/>
    </LinearLayout>
</LinearLayout>