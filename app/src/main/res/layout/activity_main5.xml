<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Bài 5 - Nhóm 9"
    android:textSize="32sp"
    android:gravity="center"
    android:textColor="#BA0707"
    android:textStyle="bold"
    android:background="#2196F3"/>

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/edtHoTen"
        android:layout_height="wrap_content"
        android:hint="Nhập họ tên"/>
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/edtCCCD"
        android:layout_height="wrap_content"
        android:hint="Nhập CCCD"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bằng cấp"
        android:textSize="26sp"
        android:gravity="center"
        android:textColor="#FFEB3B"
        android:textStyle="bold"
        android:background="#2196F3"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Đại học"
                android:layout_marginLeft="20dp"
                android:checked="true"
                android:id="@+id/rdDaiHoc" >
            </RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Cao đẳng"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/rdCaoDang" >
            </RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Trung cấp"
                android:id="@+id/rdTrungCap" >
            </RadioButton>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sở thích"
        android:textSize="26sp"
        android:gravity="center"
        android:textColor="#FFEB3B"
        android:textStyle="bold"
        android:background="#2196F3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/cbChoiGame"
            android:layout_marginLeft="20dp"
            android:text="Chơi game"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/cbDocSach"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Đọc sách" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/cbDocBao"
            android:text="Đọc báo" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDangKi"
            android:text="Đăng kí" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnNhapLai"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Nhập lại" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnThoat"
            android:text="Thoát" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tvThongTin"
            />
    </ScrollView>

</LinearLayout>