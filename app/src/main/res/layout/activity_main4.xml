<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#E31111"
        android:background="#196098"
        android:textSize="32sp"
        android:gravity="center"
        android:text="Bài 4 - Nhóm 9" />
    <EditText
        android:id="@+id/edtSo1"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập số 1" />

    <EditText
        android:id="@+id/edtSo2"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập số 2" />

    <EditText
        android:id="@+id/edtKetQua"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kết quả" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCong"
            android:onClick="PhepTinh"
            android:drawableBottom="@drawable/baseline_add_24"
            android:text="Cộng" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/baseline_minimize_24"
            android:id="@+id/btnTru"
            android:onClick="PhepTinh"
            android:text="Trừ" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/baseline_close_24"
            android:id="@+id/btnNhan"
            android:onClick="PhepTinh"
            android:text="Nhân" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/baseline_percent_24"
            android:id="@+id/btnChia"
            android:onClick="PhepTinh"
            android:text="Chia" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDanhSach" />
</LinearLayout>